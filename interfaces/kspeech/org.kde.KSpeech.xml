<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN"
    "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">

<node name="/org/kde/KSpeech">
    <interface name="org.kde.KSpeech">

        <method name="supportsMarkup">
            <arg name="talker" type="s" direction="in"/>
            <arg name="markupType" type="u" direction="in"/>
            <arg type="b" direction="out"/>
        </method>

        <method name="supportsMarkers">
            <arg name="talker" type="s" direction="in"/>
            <arg type="b" direction="out"/>
        </method>

        <method name="sayScreenReaderOutput">
            <arg name="msg" type="s" direction="in"/>
            <arg name="talker" type="s" direction="in"/>
            <annotation name="org.freedesktop.DBus.Method.NoReply" value="true"/>
        </method>        

        <method name="sayWarning">
            <arg name="warning" type="s" direction="in"/>
            <arg name="talker" type="s" direction="in"/>
            <annotation name="org.freedesktop.DBus.Method.NoReply" value="true"/>
        </method>

        <method name="sayMessage">
            <arg name="message" type="s" direction="in"/>
            <arg name="talker" type="s" direction="in"/>
            <annotation name="org.freedesktop.DBus.Method.NoReply" value="true"/>
        </method>

        <method name="setSentenceDelimiter">
            <arg name="delimiter" type="s" direction="in"/>
            <annotation name="org.freedesktop.DBus.Method.NoReply" value="true"/>
        </method>

        <method name="setText">
            <arg name="text" type="s" direction="in"/>
            <arg name="talker" type="s" direction="in"/>
            <annotation name="org.freedesktop.DBus.Method.NoReply" value="true"/>
        </method>

        <method name="sayText">
            <arg name="text" type="s" direction="in"/>
            <arg name="talker" type="s" direction="in"/>
            <arg type="u" direction="out"/>
        </method>

        <method name="appendText">
            <arg name="text" type="s" direction="in"/>
            <arg name="jobNum" type="u" direction="in"/>
            <arg type="i" direction="out"/>
        </method>

        <method name="setFile">
            <arg name="filename" type="s" direction="in"/>
            <arg name="talker" type="s" direction="in"/>
            <arg name="encoding" type="s" direction="in"/>
            <arg type="u" direction="out"/>
        </method>

        <method name="getTextCount">
            <arg name="jobNum" type="u" direction="in"/>
            <arg type="i" direction="out"/>
        </method>

        <method name="getCurrentTextJob">
            <arg type="u" direction="out"/>
        </method>

        <method name="getTextJobCount">
            <arg type="u" direction="out"/>
        </method>

        <method name="getTextJobNumbers">
            <arg type="s" direction="out"/>
        </method>

        <method name="getTextJobState">
            <arg name="jobNum" type="u" direction="in"/>
            <arg type="i" direction="out"/>
        </method>

        <method name="getTextJobInfo">
            <arg name="jobNum" type="u" direction="in"/>
            <arg type="ay" direction="out"/>
        </method>

        <method name="talkerCodeToTalkerId">
            <arg name="talkerCode" type="s" direction="in"/>
            <arg type="s" direction="out"/>
        </method>

        <method name="getTextJobSentence">
            <arg name="jobNum" type="u" direction="in"/>
            <arg name="seq" type="u" direction="in"/>
            <arg type="s" direction="out"/>
        </method>

        <method name="isSpeakingText">
            <arg type="b" direction="out"/>
        </method>

        <method name="removeText">
            <arg name="jobNum" type="u" direction="in"/>
            <annotation name="org.freedesktop.DBus.Method.NoReply" value="true"/>
        </method>

        <method name="startText">
            <arg name="jobNum" type="u" direction="in"/>
            <annotation name="org.freedesktop.DBus.Method.NoReply" value="true"/>
        </method>

        <method name="stopText">
            <arg name="jobNum" type="u" direction="in"/>
            <annotation name="org.freedesktop.DBus.Method.NoReply" value="true"/>
        </method>

        <method name="pauseText">
            <arg name="jobNum" type="u" direction="in"/>
            <annotation name="org.freedesktop.DBus.Method.NoReply" value="true"/>
        </method>

        <method name="resumeText">
            <arg name="jobNum" type="u" direction="in"/>
            <annotation name="org.freedesktop.DBus.Method.NoReply" value="true"/>
        </method>

        <method name="getTalkers">
            <arg type="as" direction="out"/>
        </method>

        <method name="changeTextTalker">
            <arg name="talker" type="s" direction="in"/>
            <arg name="jobNum" type="u" direction="in"/>
            <annotation name="org.freedesktop.DBus.Method.NoReply" value="true"/>
        </method>

        <method name="userDefaultTalker">
            <arg type="s" direction="out"/>
        </method>

        <method name="moveTextLater">
            <arg name="jobNum" type="u" direction="in"/>
            <annotation name="org.freedesktop.DBus.Method.NoReply" value="true"/>
        </method>

        <method name="jumpToTextPart">
            <arg name="partNum" type="i" direction="in"/>
            <arg name="jobNum" type="u" direction="in"/>
            <arg type="i" direction="out"/>
        </method>

        <method name="moveRelTextSentence">
            <arg name="n" type="i" direction="in"/>
            <arg name="jobNum" type="u" direction="in"/>
            <arg type="u" direction="out"/>
        </method>

        <method name="speakClipboard">
            <annotation name="org.freedesktop.DBus.Method.NoReply" value="true"/>
        </method>

        <method name="showDialog">
            <annotation name="org.freedesktop.DBus.Method.NoReply" value="true"/>
        </method>

        <method name="kttsdExit">
            <annotation name="org.freedesktop.DBus.Method.NoReply" value="true"/>
        </method>
        
        <method name="reinit">
            <annotation name="org.freedesktop.DBus.Method.NoReply" value="true"/>
        </method>

        <method name="version">
            <arg type="s" direction="out"/>
        </method>

        <signal name="kttsdStarted"/>
        
        <signal name="kttsdExiting"/>
        
        <signal name="markerSeen">
            <arg name="appId" type="s"/>
            <arg name="markerName" type="s"/>
        </signal>
        
        <signal name="sentenceStarted">
            <arg name="appId" type="s"/>
            <arg name="jobNum" type="u"/>
            <arg name="seq" type="u"/>
        </signal>
        
        <signal name="sentenceFinished">
            <arg name="appId" type="s"/>
            <arg name="jobNum" type="u"/>
            <arg name="seq" type="u"/>
        </signal>

        <signal name="textSet">
            <arg name="appId" type="s"/>
            <arg name="jobNum" type="u"/>
        </signal>

        <signal name="textAppended">
            <arg name="appId" type="s"/>
            <arg name="jobNum" type="u"/>
            <arg name="partNum" type="i"/>
        </signal>

        <signal name="textStarted">
            <arg name="appId" type="s"/>
            <arg name="jobNum" type="u"/>
        </signal>
        
        <signal name="textFinished">
            <arg name="appId" type="s"/>
            <arg name="jobNum" type="u"/>
        </signal>

        <signal name="textStopped">
            <arg name="appId" type="s"/>
            <arg name="jobNum" type="u"/>
        </signal>
        
        <signal name="textPaused">
            <arg name="appId" type="s"/>
            <arg name="jobNum" type="u"/>
        </signal>

        <signal name="textResumed">
            <arg name="appId" type="s"/>
            <arg name="jobNum" type="u"/>
        </signal>

        <signal name="textRemoved">
            <arg name="appId" type="s"/>
            <arg name="jobNum" type="u"/>
        </signal>

    </interface>
</node>
